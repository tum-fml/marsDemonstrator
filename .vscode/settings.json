{
    "python.pythonPath": "C:\\Users\\ge67kub\\.conda\\envs\\mars\\python.exe",
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "files.autoSave": "onFocusChange",
    "terminal.integrated.fontSize": 14,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // Windows only settings
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    // Anaconda / Python settings
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,

    "python.linting.pylintArgs": [
      "--max-line-length=120",
      "--disable=trailing-whitespace,bad-whitespace,invalid-name,line-too-long,missing-module-docstring,missing-class-docstring,missing-function-docstring,broad-except",
      "--generated-members=numpy.* ,torch.* ,cv2.* , cv.*",
      //"--ignored-classes=torch"
    ],

    "python.autoComplete.extraPaths": [

      "marsDemonstrator"

  ],

    "python.linting.mypyEnabled": true,
    // "python.jediEnabled": false,
    // Python Docstring settings
    "autoDocstring.docstringFormat": "numpy", //"google",
    "autoDocstring.generateDocstringOnEnter": true,
    "autoDocstring.includeExtendedSummary": false,
    // Git settings
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "python.languageServer": "Pylance",
    // "kite.showWelcomeNotificationOnStartup": false,
    "diffEditor.renderSideBySide": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
      "--max-line-length=120",
      "--ignore=E201,E2020,E221,E226,E24,E251,E261,E266,W291,E402,W50,E501,W690,E722"
    ],
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
      "--max-line-length=120",
      "--ignore=E201,E2020,E221,E226,E24,E251,E261,E266,W291,E402,W50,E501,W690,E722"
    ],
